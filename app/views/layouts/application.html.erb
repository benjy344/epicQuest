<!DOCTYPE html>
<html>
  <head>
    <title>EpicQuest</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="<%= controller.controller_name %>">
    <div class="messages">
      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>
    </div>

      <%= yield %>


    <% if user_signed_in?%>
    <div class="user-info">
      <p>Connecté en tant que : <%= current_user.username%></p>
      <p>
        <%= link_to 'Déconnection' , destroy_user_session_path, :method => :delete %>
      </p>
      <div class="close-user"><div class="link"><span class="link__icon__bar"></span></div></div>
    </div>


    <% end %>
  </body>
</html>
