<%= simple_form_for(@avatar, defaults: {wrapper_html: { class: 'form-group' }, input_html: { class: 'form-input' } }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name, label:'name', class: 'form-control', placeholder: current_user.username, required: true, label_html: { class: 'form-group' } %>

    <div class="selectbox">
      <%= f.association :job, label:'Choose a Job', class: 'form-control', required: true, label_html: { class: 'form-group' } %>
    </div>
  </div>

  <div class="form-actions form-group">
    <%= f.submit 'Create', class: 'btn'%>
  </div>
<% end %>
